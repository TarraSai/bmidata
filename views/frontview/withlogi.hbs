<script>

  function cal() {
  var w = document.getElementById("weight").value;
  var h = document.getElementById("height").value;
  var meter = h /100;
  var wh = w / (meter * meter);
  var weightheight = wh.toPrecision(4);
  document.getElementById("display").value = weightheight;
  handleUserInput();
}

function ac() {
  document.getElementById("display").value = "";
  document.getElementById("weight").value = "";
  document.getElementById("height").value = "";
  handleUserInput();
}

const bmiRanges = [
  { range: "Underweight (Below 18.5)", color: "blue", min: 0, max: 18.5 },
  { range: "Normal Weight (18.5 - 24.9)", color: "green", min: 18.5, max: 24.9 },
  { range: "Overweight (25 - 29.9)", color: "yellow", min: 25, max: 29.9 },
  { range: "Obese (30 and above)", color: "red", min: 30, max: 50 } // Changed max value to 50
];

function updateBar(bmiValue) {
  bmiValue = Math.min(bmiValue, 50);

  const container = document.querySelector(".bmi-infographic");

  container.querySelectorAll(".bar").forEach(barElement => {
    barElement.style.background = "white";
  });

  const matchedRange = bmiRanges.find(range => bmiValue >= range.min && bmiValue <= range.max);

  if (matchedRange) {
    const barElement = container.querySelector(`[data-bmi-range="${matchedRange.range}"] .bar`);
    let percentage = (bmiValue - matchedRange.min) / (matchedRange.max - matchedRange.min) * 100;
    percentage = Math.min(percentage, 100);
    barElement.style.setProperty(`--${matchedRange.color}-percentage`, `${percentage}%`);
    barElement.style.background = `linear-gradient(to right, ${matchedRange.color} ${percentage}%, white ${percentage}%)`;
  }
}

function handleUserInput() {
  const bmiInput = document.getElementById("display").value;
  const bmiValue = parseFloat(bmiInput);

  if (!isNaN(bmiValue)) {
    updateBar(bmiValue);
  }
  else{
    updateBar(0);
    document.getElementById("display").value = " ";
  }
}

const inputField = document.getElementById("display");
inputField.addEventListener("input", handleUserInput);


cal();
function handleTipsButtonClick() {
  const bmiInput = parseFloat(document.getElementById("display").value);

  if (!isNaN(bmiInput)) {
    let pageUrl = "/withoutlog"; // Default URL if BMI category is not matched
    if (bmiInput < 18.5) {
      pageUrl = "/underweight";
    } else if (bmiInput >= 18.5 && bmiInput <= 24.9) {
      pageUrl = "/normalweight";
    } else if (bmiInput >= 25 && bmiInput <= 29.9) {
      pageUrl = "/overweight";
    } else {
      pageUrl = "/obese";
    }

    window.location.href = pageUrl; // Redirect to the corresponding BMI category page
  }
}

// Add an event listener for the "Tips" button click
document.addEventListener("DOMContentLoaded", function () {
  const tipsButton = document.querySelector(".learn-more .button-text");
  tipsButton.addEventListener("click", handleTipsButtonClick);
